<p id="notice"><%= notice %></p>

<h2><%= @post.title %></h2>
<p>
  <b>By:</b> <%= @post.author.name %>
</p>


<div class="post">
  <%= raw @post.body_paragraphized %>
</div>

<%= render 'comment_form_for_post_footer' %>

<% @post.comments.each do |comment| %>

  <p>
    <em><%= comment.author.name %></em>
  </p>
  <p>
    <%= raw comment.body_paragraphized %>
  </p>
  <hr>

<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
